@using TicTacToe.Resources
@model TicTacToe.Models.MVC.Game.Game
<div class="form-row justify-content-center">
    <div class="form-group">
        <label class="mb-3">@GameStrings.SelectGameLevel:</label>
        <div class="btn-group mt-2" role="group">
            <div class="form-check m-1">
                @Html.EditorFor(m => m.Level.LevelEnum, "EnumRadioButtonList")
            </div>
        </div>
        <span asp-validation-for="Level.LevelEnum"></span>
    </div>
</div>
@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}